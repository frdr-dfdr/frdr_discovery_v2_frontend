<% document ||= @document %>

<% if document.external_url.present? %>
  <dd class="offset-md-3 offset-lg-0 col-12">
    <%= link_to document.external_url, class: 'btn btn-primary' do %>
      <%= fa_icon "external-link", text: t('geoblacklight.tools.access'), right: false %>
    <% end %>
  </dd>
<% end %>
